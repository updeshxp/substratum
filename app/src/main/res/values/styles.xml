<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">@bool/windowLightStatusBar</item>
        <item name="android:toolbarStyle">@style/ToolbarTheme</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="colorControlHighlight">@color/colorRipple</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.DialogAlert" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert" />

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.InformationActivity" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/information_activity_background_shadow</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CollapsedAppBar" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="CustomWelcomeScreenTheme" parent="WelcomeScreenTheme">
        <item name="welcomeIndicatorStyle">@style/WelcomeScreenPageIndicator.Custom</item>
        <item name="welcomeTitleTextStyle">@style/WelcomeScreenText.Title.Centered</item>
    </style>

    <style name="DoNotThemeThisStyleDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DoNotThemeThisStyleInitial" parent="Theme.AppCompat.Translucent" />

    <style name="DoNotThemeThisStyle" parent="android:Theme.DeviceDefault.NoActionBar">
        <item name="android:navigationBarColor">@color/do_not_theme_this_color</item>
        <item name="android:statusBarColor">@color/do_not_theme_this_color</item>
        <item name="android:windowBackground">@color/do_not_theme_this_color</item>
    </style>

    <style name="PhotoCrop.ActivityTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:colorPrimary">@android:color/transparent</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/cropper_bg_glass</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="RestoreDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert" />

    <style name="TextAppearance.ExpandedTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="SplashScreen.ActivityTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:navigationBarColor">@color/splashscreen_background</item>
        <item name="android:statusBarColor">@color/splashscreen_background</item>
        <item name="android:windowLightStatusBar">@bool/SplashscreenWindowLightStatusBar</item>
    </style>

    <style name="SubstratumBuilder.ActivityTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:textColor">@color/dialog_text_color</item>
        <item name="android:windowAnimationStyle">@style/SubstratumBuilder.WindowAnimation</item>
        <item name="android:windowBackground">@color/window_bg_glass</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SubstratumBuilder.WindowAnimation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.DayNight">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/SubstratumBuilder.WindowAnimation</item>
    </style>

    <style name="FloatUiDialog" parent="@style/Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:colorAccent">@color/floatui_dialog_button_color</item>
        <item name="android:windowTitleStyle">@style/FloatUiDialog</item>
        <item name="android:windowBackground">@color/floatui_dialog_background</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/FloatUiAnimation</item>

        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="FloatUiAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/floatui_anim_in</item>
        <item name="android:windowExitAnimation">@anim/floatui_anim_out</item>
    </style>

    <style name="WelcomeScreenPageIndicator.Custom">
        <item name="animation">fade</item>
    </style>

    <style name="Widget.MaterialSheetFab.Sheet" parent="">
        <item name="android:layout_width">@dimen/sheet_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sheet_spacing</item>
        <item name="android:layout_marginBottom">@dimen/sheet_spacing</item>
        <item name="android:layout_marginStart">@dimen/sheet_spacing</item>
        <item name="android:layout_marginEnd">@dimen/sheet_spacing</item>
        <item name="cardBackgroundColor">@color/fab_menu_background_card</item>
        <item name="cardElevation">@dimen/fab_sheet_elevation</item>
        <item name="cardMaxElevation">@dimen/fab_sheet_elevation</item>
        <item name="contentPadding">-3dp</item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Sheet.Item" parent="">
        <item name="android:layout_width">@dimen/sheet_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sheet_item_spacing</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sheet_item_textsize</item>
        <item name="android:textColor">@color/fab_menu_text_color</item>
        <item name="android:drawablePadding">@dimen/sheet_item_image_spacing</item>
    </style>

    <style name="ShowcaseDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
